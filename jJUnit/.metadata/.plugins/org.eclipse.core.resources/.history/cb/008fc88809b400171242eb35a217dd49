package JaugeTest;

import static org.junit.Assert.*;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

public class JaugeNaturelTest {
	
	JaugeNaturel jauge;

	@Before
	public void setUp() throws Exception {
		jauge = new JaugeNaturel(0, 50, 50);
	}

	@After
	public void tearDown() throws Exception {
		jauge = null;
	}

	@Test
	public void testJaugeNaturel() {
		assertNotNull("ma jauge est bien créée", jauge);
	}

	@Test
	public void testEstRouge() {
		assertTrue("ma jauge est rouge", jauge.estRouge());
	}

	@Test
	public void testEstVert() {
		assertFalse("ma jauge n'est pas vert", jauge.estVert());
	}

	@Test
	public void testEstBleu() {
		assertFalse("ma jauge n'est pas bleu", jauge.estBleu());
	}
	
	public void run() {
	     System.out.print("Test de JaugeNaturel:");

	     System.out.print(".");
	     testDansIntervalle();

	      System.out.print(".");
	      //testInferieurIntervalle();

	     System.out.println("OK");
	  }
	
	@Test
	public void testDansIntervalle() {
		JaugeNaturel jaugeNew = new JaugeNaturel(100, -345, 67899);
		
		assertFalse("ma jauge n'est pas bleu", jaugeNew.estBleu());
		assertTrue("ma jauge est vert lol", jaugeNew.estVert());
		assertFalse("ma jauge n'est pas rouge", jaugeNew.estRouge());
	}
	
}
